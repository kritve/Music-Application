{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"target": "ES6",
		"module": "commonjs",
		"moduleResolution": "Node",
		"jsx": "react-native",
		"lib": ["dom", "esnext"],
		"noEmit": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@/assets/*": ["./assets/*"],
			"typeRoots": ["./node_modules/@types", "./types"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/*.js",
		"src/app/context/AudioProvider.js",
		"src/app/(tabs)/Account/index.jsx"
	],
	"exclude": ["node_modules"]
}
